<?xml version="1.0" encoding="UTF-8"?>
<project name="module_androidlinter" default="compile.module.androidlinter">
  <dirname property="module.androidlinter.basedir" file="${ant.file.module_androidlinter}"/>
  
  <property name="module.jdk.home.androidlinter" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.androidlinter" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.androidlinter" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.androidlinter" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="androidlinter.output.dir" value="${module.androidlinter.basedir}/target/classes"/>
  <property name="androidlinter.testoutput.dir" value="${module.androidlinter.basedir}/target/test-classes"/>
  
  <path id="androidlinter.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="androidlinter.module.production.classpath">
    <path refid="${module.jdk.classpath.androidlinter}"/>
    <path refid="library.maven:_com.github.javaparser:javaparser-core:3.6.9.classpath"/>
  </path>
  
  <path id="androidlinter.runtime.production.module.classpath">
    <pathelement location="${androidlinter.output.dir}"/>
    <path refid="library.maven:_com.github.javaparser:javaparser-core:3.6.9.classpath"/>
  </path>
  
  <path id="androidlinter.module.classpath">
    <path refid="${module.jdk.classpath.androidlinter}"/>
    <pathelement location="${androidlinter.output.dir}"/>
    <path refid="library.maven:_com.github.javaparser:javaparser-core:3.6.9.classpath"/>
  </path>
  
  <path id="androidlinter.runtime.module.classpath">
    <pathelement location="${androidlinter.testoutput.dir}"/>
    <pathelement location="${androidlinter.output.dir}"/>
    <path refid="library.maven:_com.github.javaparser:javaparser-core:3.6.9.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.androidlinter">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.androidlinter">
    <patternset refid="excluded.from.module.androidlinter"/>
  </patternset>
  
  <path id="androidlinter.module.sourcepath">
    <dirset dir="${module.androidlinter.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.androidlinter" depends="compile.module.androidlinter.production,compile.module.androidlinter.tests" description="Compile module AndroidLinter"/>
  
  <target name="compile.module.androidlinter.production" depends="register.custom.compilers" description="Compile module AndroidLinter; production classes">
    <mkdir dir="${androidlinter.output.dir}"/>
    <javac2 destdir="${androidlinter.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.androidlinter}/javac">
      <compilerarg line="${compiler.args.androidlinter}"/>
      <bootclasspath refid="androidlinter.module.bootclasspath"/>
      <classpath refid="androidlinter.module.production.classpath"/>
      <src refid="androidlinter.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.androidlinter"/>
    </javac2>
    
    <copy todir="${androidlinter.output.dir}">
      <fileset dir="${module.androidlinter.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.androidlinter.tests" depends="register.custom.compilers,compile.module.androidlinter.production" description="compile module AndroidLinter; test classes" unless="skip.tests"/>
  
  <target name="clean.module.androidlinter" description="cleanup module">
    <delete dir="${androidlinter.output.dir}"/>
    <delete dir="${androidlinter.testoutput.dir}"/>
  </target>
</project>